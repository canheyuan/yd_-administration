page{background: #f7f7f7;padding-top:80rpx; padding-bottom: 30rpx;}

/* 选项卡切换 */
.tag_box{border-top: none;}
.tag_box .tag_list{margin:0 44rpx;}

/* 内容列表 */
.repair_list{padding: 26rpx 0 32rpx; margin-top: 32rpx; background: #fff;}
.repair_list .yd_title01{margin-left: 16rpx; float: left;}
.repair_list .status{color: #f28d09; font-size: 28rpx; margin-right: 32rpx; float: right;}
.repair_list .status.follow{color: #2f9cac;}
.repair_list .status.done{color: #a5a5a5;}
.repair_list .repair_ctn{padding: 0 32rpx; clear: left; position: relative;}
.repair_list .repair_ctn .title{color: #333; font-size: 32rpx; font-weight: 500; padding: 26rpx 0 10rpx;}
.repair_list .repair_ctn .lable{color: #9d9d9d; font-size: 28rpx; line-height: 36rpx; float: left;}
.repair_list .repair_ctn .text{color: #777; font-size: 28rpx; line-height: 36rpx; float: left;}
.repair_list .repair_ctn .time_msg{font-size:24rpx; color:#9d9d9d; padding-top: 16rpx; clear: both;}
.repair_list .repair_ctn .ico_txt{float: left;}
.repair_list .repair_ctn .dtime{float: right;}
.repair_list .repair_ctn .btn{width: 22%; position: absolute; right: 32rpx; bottom: 0;}

