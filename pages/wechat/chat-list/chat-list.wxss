
page{background: #f7f7f7;}

/* 通知 */
.msg_box{background: white; padding: 30rpx 0 0 36rpx; text-align: left; line-height:50rpx;}
.msg_box::after{
border: none;
}
.msg_box .div_top{padding: 0 26rpx 36rpx 0; margin-left: 122rpx;}
.msg_box>image{width: 114rpx;height: 114rpx; float: left; margin-right: 20rpx;}
.msg_box .div_top .info_1{margin: 4rpx 0 8rpx; line-height:50rpx; height:50rpx;}
.msg_box .div_top .info_1 .title{font-size: 34rpx; font-weight: 500;}
.msg_box .div_top .info_1 .time{font-size: 24rpx; color: #9d9d9d; float: right; margin-top: 12rpx; line-height:38rpx;}
.msg_box .div_top .info_1 .comp{font-size: 24rpx;color: #9d9d9d;margin-left: 10rpx;}
.msg_box .div_top .info_2 .txt{font-size: 30rpx;color: #666; height:40rpx; line-height:40rpx; display: block; text-overflow:ellipsis; white-space:nowrap; overflow:hidden;}
.msg_box .div_top .info_2 .red{color: #fff; height: 36rpx; font-size: 22rpx; line-height: 36rpx; border-radius: 18rpx; padding: 0 12rpx; background: #ff3b30; margin-top: 10rpx; float: right;}
.top_notice{border-top: solid 1rpx #e5e5e5; border-bottom: 32rpx solid #f7f7f7;}

/* 用户 */
.usermsg_box{padding: 24rpx 0 0;}
.usermsg_box .user_head{width: 114rpx; height: 114rpx; margin-right: 20rpx; border-radius: 50%; float: left;}
.usermsg_box .user_head image{width: 100%; height: 100%; border-radius: 50%;}
.usermsg_box .div_top{border-bottom: 1rpx solid #e2e2e2;}

.usermsg_box .msg_box:last-child .div_top{border-bottom:none;}

.msg_mdl{margin:20rpx; background:#fff; overflow: hidden; border-radius:10rpx;}
.msg_item{width:50%; box-sizing:border-box; float:left; padding:30rpx 15rpx; position:relative;}
.msg_item .img{float:left; width:114rpx; height:114rpx; margin-right:20rpx;}
.msg_item .info{overflow:hidden;}
.msg_item .title{font-size:32rpx; color:#333; font-weight:bold; margin-bottom:10rpx; padding-top:10rpx;}
.msg_item .p{font-size:24rpx; color:#9d9d9d;}
.msg_item .num{position:absolute; top:25rpx; right:25rpx; width:36rpx; height:36rpx; line-height:36rpx; text-align: center; background:#ff3b30; color:#fff; font-size:24rpx; border-radius:100%;}

