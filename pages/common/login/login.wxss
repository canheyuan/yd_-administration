.login_mdl{background:url(https://www.5iparks.com/static/yuanding/images/login_bg.jpg) no-repeat center -50rpx; background-size:100% auto; padding: 80rpx 0rpx 0 0;}
.login_mdl .per_img{display:block; width:200rpx; height:200rpx; margin:0 auto 50rpx; border-radius:100%;}
.login_title .txt{font-size:36rpx; color:#fff;}
.login_form{background:#fff; margin:35rpx; border-radius:15rpx; box-shadow: 0 10rpx 50rpx rgba(0,0,0,.14); padding:75rpx 40rpx 40rpx;}
.login_form .input_box{height:100rpx; background:#fafafa; border-radius:20rpx; border:1rpx solid #e5e5e5; text-align: left; padding:0 0 0  30rpx; line-height:100rpx; margin-bottom:30rpx;}
.login_form .input_box .input{display:inline-block; height:100rpx; line-height:100rpx; box-sizing:border-box; width:400rpx;}
.login_form .input_box icon{display:inline-block; width:50rpx; height:50rpx; vertical-align: top; float:left; margin-top:28rpx; margin-right:20rpx;}
.login_form .input_box .ico_user{background-position: 0 -420rpx;}
.login_form .input_box .ico_pwd{background-position: -50rpx -420rpx;}
.login_form .tip_txt{font-size:28rpx; color:#eb0000; text-align: left; padding-left:20rpx; margin-top:-10rpx; line-height:30rpx; }

.login_btm{overflow: hidden; font-size:28rpx;padding:0 45rpx; color:#b2b2b2;}
.login_btm .forget_btn{float:right; color:#b2b2b2; }
.login_btm .reg_btn{float:left;}
.login_btm .reg_btn .a{display:inline-block; color:#2a99f1; text-decoration:underline;}
.btn_wrap{position:fixed; bottom:50rpx; left:0; width:100%; box-sizing:border-box; padding:0 100rpx;}
.blue_btn{height:100rpx; line-height:100rpx; text-align: center; border-radius:50rpx; background:#6592fe; color:#fff; font-size:40rpx; box-shadow: 0 10rpx 34rpx rgba(101,146,254,.62);}


