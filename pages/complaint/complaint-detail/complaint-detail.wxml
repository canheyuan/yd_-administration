
<!-- 报修详情 -->
<view class='repair_list clearfix'>
  <view class='hdr_line'>
    <view class='yd_title01'>{{detailsData.entName}}</view>
    <!-- 未接单状态 -->
    <view class='status follow' wx:if="{{detailsData.status==1}}">{{detailsData.statusName}}</view>
    <!-- 已接单状态 -->
    <view class='status' wx:elif="{{detailsData.status==2}}">{{detailsData.statusName}}</view>
    <!-- 已完成状态 -->
    <view class='status done' wx:elif="{{detailsData.status==3||detailsData.status==4}}"></view>
  </view>
  <view class='repair_ctn clearfix'>
    <view class='dl'>
      <view class='dt'>报修类型</view>
      <view class='dd'>{{detailsData.typeName}}</view>
    </view>
    <view class='repair_txt f_30'>{{detailsData.description?detailsData.description:'暂无描述'}}</view>
    <view class='dl'>
      <view class='dt'>报修地址</view>
      <view class='dd'>{{detailsData.roomName}}</view>
    </view>
    <view class='dl'>
      <view class='dt'>联系人</view>
      <view class='dd'>{{detailsData.contact}}</view>
    </view>
    <view class='dl'>
      <view class='dt'>联系电话</view>
      <view class='dd'>{{detailsData.phone}}</view>
    </view>
    <view class='dl'>
      <view class='dt'>图片附件</view>
      <view class='dd' wx:if="{{detailsData.imageList.length==0}}">暂无图片</view>
      <view class='dd' wx:if="{{detailsData.imageList.length>0}}">
        <view class='pic' wx:for="{{detailsData.imageList}}" wx:key="{{index}}">
          <image src='{{item}}' bindtap="bigImgFn" data-big_img='{{item?item:domainUrl+"/images/default/img_200_200.jpg"}}'></image>
        </view>
      </view>
    </view>
  </view>
</view>
<view class='ylb_txt' bindtap="popFn"><icon class="icons"></icon>有偿服务价格一览表 >></view>

<!-- 维修人员 -->
<!-- 已接单后才有此模块 -->
<view wx:if="{{detailsData.status==2||detailsData.status==3||detailsData.status==4}}" class='repair_person clearfix'>
  <view class='head'><image src='{{domainUrl}}/images/temp/repair_user.jpg' class='img' mode='widthFix'></image></view>
  <view class='lable'>维修人员</view>
  <view class='content'>{{detailsData.handlerName}}</view>
</view>

<!-- 价格评分 -->
<!-- 已完成后才有此模块 -->
<view wx:if="{{detailsData.status==4}}" class='repair_price clearfix'>
  <view class='dl'>
    <view class='dt'>实收金额</view>
    <view class='dd fw500 f_32 f_orange'><text>¥</text>{{detailsData.repairMoney}}</view>
  </view>
  <view class='dl'>
    <view class='dt'>客户评分</view>
    <view class='dd'>
      <view class='star_list'>
      <view class='icons {{detailsData.star>starItem?"cur":""}}' 
        wx:for="{{[0,1,2,3,4]}}"  wx:key="{{index}}" wx:for-item="starItem"
      ></view>
      </view>
    </view>
  </view>
</view>

<!-- 订单号时间 -->
<view class='order_time clearfix'>
  <view class='ico_txt'><image src='{{domainUrl}}/images/icon/ico_order_num.png'></image>单号：</view>
  <view class='ico_txt order_num'>GY201806297665XY未定义</view>
  <view class='ico_txt'><image src='{{domainUrl}}/images/icon/ico_clock.png'></image>报修时间：{{detailsData.createTime}}</view>
  <!-- 已接单后才有此时间 -->
  <view wx:if="{{detailsData.status!=1}}"class='ico_txt noicon'>派单时间：</view>
  <!-- 已完成后才有此时间 -->
  <view wx:if="{{detailsData.status==3||detailsData.status==4}}"class='ico_txt noicon'>完成时间：{{detailsData.finishTime}}</view>
</view>

<!-- 底部按钮 -->
<!-- 已完成状态 -->
<view class='yd_title02' style='{{(detailsData.status==1||detailsData.status==2)?"margin-bottom:130rpx;":""}}'>
<view class='txt'>没有更多了</view>
</view>
<!-- 未接单状态 -->
<view wx:if="{{detailsData.status==1}}" class='blue_btn_btm' bindtap='setFollow'>我要跟进</view>
<!-- 已接单状态 -->
<view wx:if="{{detailsData.status==2 && detailsData.isMyself}}" class='blue_btn_btm' bindtap="servePopFn">处理好了</view>

<!-- 园区管家分配 -->
<!-- <view wx:if="{{loginInfo.userInfo.parkKeeper && detailsData.status==1}}" class='blue_btn_btm' bindtap="maintainerPopShow">分派跟进</view> -->

<picker 
   wx:if="{{loginInfo.userInfo.parkKeeper && detailsData.status==1}}"
  class='blue_btn_btm' bindchange="chooseMaintainersFn" name="" 
  value="" range="{{detailsData.maintainers}}" range-key="title"
>
  分派跟进
</picker>

<!-- 有偿服务价格一览表弹窗 -->
<view hidden="{{popIsShow}}">
<serve-price-pop bindclosepop="popFn"></serve-price-pop>
</view>

<!-- 服务完成弹窗 -->
<view class='mask_bg pop_show' wx:if="{{servePop}}">
  <view class='mask_bg_ctn'>
    <view class='pop_mdl'>
      <view class='h3'>服务完成</view>
      <view class='p'>感谢您对我们的支持！</view>
      <view class='p'>本次维修支付的金额是：</view>
      <input type="digit" class='price_input' placeholder="请填写支付金额"  bindblur="blurInput" type="digit"/>
      <view class='btm_btn clearfix'>
        <view class='btn' bindtap="servePopFn">取消</view>
        <view class='btn' bindtap='setComplete'>确定</view>
      </view>
      <view class='close_btn icons'  bindtap="servePopFn"></view>
    </view>
  </view>
</view>

